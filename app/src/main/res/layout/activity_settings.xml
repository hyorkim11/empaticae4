<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="empaticae4.hrker.com.empaticae4.activity.settings.SettingsActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="Settings"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/texts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="DEBUG LOG" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="All content for debugging purposes, please do not touch." />

        <TextView
            android:id="@+id/sp0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sp4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sp6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sp7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/bSend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texts"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@mipmap/ic_report"
        android:drawablePadding="5dp"
        android:text="Send CSV" />

    <Button
        android:id="@+id/bResetCSV"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bSend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/ic_close"
        android:drawablePadding="5dp"
        android:text="Reset CSV" />

    <Button
        android:id="@+id/resetPrefs"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bResetCSV"
        android:layout_centerHorizontal="true"
        android:text="Reset SharedPrefs" />


</RelativeLayout>
